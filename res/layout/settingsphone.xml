<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
>
    <LinearLayout
        android:id="@+id/widget51"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:id="@+id/widget85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nastavení čísel"
            android:textSize="32sp"    />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#FF0000FF" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#FF0000FF" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="#00000000" />
    
        <EditText
            android:id="@+id/phonenum"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="Telefonní číslo"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/widget85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Číslo zadávejte s předčíslím ve formátu +420123..."  />
        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="#00000000" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#FF0000FF" />
    
        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="#00000000" />
    
        <EditText
            android:id="@+id/phonealias"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="Alias čísla"
            android:layout_centerVertical="true" />
    
        <TextView
            android:id="@+id/widget85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pojmenování telefonního čísla pro lepší orientaci"  />
        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="#00000000" />  
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#FF0000FF" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="#00000000" />
    
        <Spinner
            android:id="@+id/phonecolor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_centerVertical="true" />
    
        <TextView
            android:id="@+id/widget85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vyberte barvu značky. ČERVENÁ - 0, MODRÁ - 1, ZELENÁ - 2, ŽLUTÁ - 3, RŮŽOVÁ - 4, SV. MODRÁ - 5"  />
    
        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="#00000000" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#FF0000FF" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="#00000000" />
            
        <Button
            android:id="@+id/widge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Přidat číslo" />
        <Button
            android:id="@+id/removeselected"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Smazat označené" />
        
        <Button
            android:id="@+id/widget91"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Uložit a pokračovat" />
            
        <LinearLayout
            android:id="@+id/layoutlistview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            xmlns:android="http://schemas.android.com/apk/res/android">
            
        
            <ListView xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/listview"
                      android:layout_width="fill_parent"
                      android:choiceMode="singleChoice"
                      android:listSelector="#666666"
                      android:layout_height="2000dp" /> 
        </LinearLayout>

    </LinearLayout>

</ScrollView>